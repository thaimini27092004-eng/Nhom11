@model WebsiteBanHang.Models.TrangThai
@{
    ViewData["Title"] = "Chi tiết Trạng Thái";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/css/Admin_TrangThai.css">

<h2 class="content-title">@Model.TenTT</h2>
<hr class="content-divider" />

<div class="form-container">
    <div class="banner-details">
        <div class="banner-image-container">
            @if (!string.IsNullOrEmpty(Model.UrlAnh))
            {
                <img src="@Model.UrlAnh" alt="Trạng Thái" class="preview-image" />
            }
            else
            {
                <p class="error-message">Chưa có ảnh trạng thái.</p>
            }
        </div>

        <div class="banner-info">
            <table class="info-table">
                <tr>
                    <td class="label-cell"><strong>Mã Trạng Thái:</strong></td>
                    <td>@Model.MaTT</td>
                </tr>
                <tr>
                    <td class="label-cell"><strong>Tên Trạng Thái:</strong></td>
                    <td>@Model.TenTT</td>
                </tr>
                <tr>
                    <td class="label-cell"><strong>Trạng Thái Hiển Thị:</strong></td>
                    <td>@(Model.TTHienThi ? "Bật" : "Tắt")</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="action-bar">
        <button type="button" class="action-btn edit-btn" onclick="window.location.href='@Url.Action("Update", "TrangThai", new { maTT = Model.MaTT })'">Chỉnh sửa</button>
        <button type="button" class="action-btn cancel-btn" onclick="window.location.href='@Url.Action("Index", "TrangThai")'">Quay Lại</button>
    </div>
</div>