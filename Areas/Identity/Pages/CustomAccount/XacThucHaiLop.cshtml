@*Areas/Identity/Pages/CustomAccount/XacThucHaiLop.cshtml*@

@page
@model WebsiteBanHang.Areas.Identity.Pages.CustomAccount.XacThucHaiLopModel

@{
    ViewData["Title"] = "Xác thực hai lớp";

}

<style>
    .manage-card {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

        .manage-card:hover {
            transform: translateY(-5px);
        }
</style>

<h1 class="text-center mb-4" style="color: #343a40;">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="manage-card">
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-success">@Model.StatusMessage</div>
            }
            <p>Trạng thái xác thực hai lớp: <strong>@(Model.Is2FaEnabled ? "Bật" : "Tắt")</strong></p>
            <form method="post">
                <button type="submit" class="btn btn-@(Model.Is2FaEnabled ? "danger" : "primary") btn-block mt-3">@(Model.Is2FaEnabled ? "Tắt xác thực hai lớp" : "Bật xác thực hai lớp")</button>
            </form>
            @if (Model.Is2FaEnabled)
            {
                <p class="mt-3">Xác thực hai lớp đã được kích hoạt. Vui lòng sử dụng ứng dụng xác thực (như Google Authenticator) để quản lý.</p>
            }
        </div>
    </div>
</div>