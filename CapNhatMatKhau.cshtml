
@*Areas/Identity/Pages/Account/CapNhatMatKhau.cshtml*@

@page
@model WebsiteBanHang.Areas.Identity.Pages.Account.CapNhatMatKhauModel

@{
    ViewData["Title"] = "Cập Nhật Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="/css/GiaoDien_DangNhap.css" rel="stylesheet">
    <link href="/css/GiaoDien_Modal_XacNhan.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <form id="updatePasswordForm" method="post">
            @Html.AntiForgeryToken()
            <img src="/images/logo/logo_dangnhap.PNG" alt="Logo" class="logo">
            <h3>Cập Nhật Mật Khẩu</h3>
            <p class="sub-text">Nhập mật khẩu mới cho tài khoản của bạn</p>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Input.NewPassword" placeholder="Nhập mật khẩu mới" id="Input_NewPassword" type="password" autocomplete="new-password" aria-required="true" required />
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            <div id="password-error" class="error-message"></div>

            <input asp-for="Input.ConfirmPassword" placeholder="Xác nhận mật khẩu mới" id="Input_ConfirmPassword" type="password" autocomplete="new-password" aria-required="true" required />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            <div id="confirm-error" class="error-message"></div>

            <button type="submit" id="updateSubmit" class="login-btn">Cập nhật</button>

            <div class="additional-links">
                <a asp-page="./Login" class="custom-link">Đăng nhập</a>
                <span class="separator">|</span>
                <a asp-page="./DoiMatKhau" class="custom-link">Quay lại nhập email?</a>
            </div>
        </form>

        <!-- Modal xác nhận cập nhật -->
        <div class="modal" id="confirmModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Xác nhận</h5>
                    </div>
                    <div class="modal-body">
                        Bạn có chắc chắn muốn cập nhật mật khẩu không?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="modal-btn" id="confirmYes">Có</button>
                        <button type="button" class="modal-btn" id="confirmNo">Không</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal thông báo lỗi -->
        <div class="modal" id="errorModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Thông báo</h5>
                    </div>
                    <div class="modal-body">
                        Cập nhật mật khẩu không thành công! Hãy thử lại!
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="modal-btn" id="closeModal">OK</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.validation.unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Lấy ô input và chỗ hiển thị lỗi
            var password = $("#Input_NewPassword");
            var confirmPassword = $("#Input_ConfirmPassword");
            var passwordError = $("#password-error");
            var confirmError = $("#confirm-error");

            // Khởi tạo modal
            var errorModal = $("#errorModal");
            var confirmModal = $("#confirmModal");

            // Biến cờ để kiểm tra lần đầu click vào màn hình
            var isFirstClick = true;

            // Hàm kiểm tra lỗi
            function checkErrors() {
                var pass = password.val().trim();
                var confirm = confirmPassword.val().trim();
                var hasError = false;

                // Kiểm tra mật khẩu
                if (pass != "") {
                    if (pass.length < 6) {
                        passwordError.text("Mật khẩu phải có ít nhất 6 ký tự");
                        hasError = true;
                    } else if (pass.length > 100) {
                        passwordError.text("Mật khẩu không quá 100 ký tự");
                        hasError = true;
                    } else if (!/[A-Z]/.test(pass)) {
                        passwordError.text("Mật khẩu phải chứa ký tự in hoa");
                        hasError = true;
                    } else if (!/[0-9]/.test(pass)) {
                        passwordError.text("Mật khẩu phải có ít nhất một số (0-9)");
                        hasError = true;
                    } else if (!/[!@@#$%^&*+=?_]/.test(pass)) {
                        passwordError.text("Mật khẩu phải có ký tự đặc biệt");
                        hasError = true;
                    } else {
                        passwordError.text("");
                    }
                } else {
                    passwordError.text("");
                    hasError = true;
                }

                // Kiểm tra xác nhận mật khẩu
                if (pass != "" && confirm != "") {
                    if (pass != confirm) {
                        confirmError.text("Mật khẩu không khớp");
                        hasError = true;
                    } else {
                        confirmError.text("");
                    }
                } else if (confirm == "") {
                    confirmError.text("");
                    hasError = true;
                }

                return hasError;
            }

            // Xử lý lần đầu click vào màn hình
            $(document).on("click", function (e) {
                if (isFirstClick) {
                    isFirstClick = false;
                    checkErrors();
                }
            });

            // Kiểm tra khi nhập
            password.on("input", checkErrors);
            confirmPassword.on("input", checkErrors);

            // Khi nhấn "Cập nhật"
            $("#updateSubmit").on("click", function (event) {
                if (!checkErrors()) {
                    event.preventDefault();
                    confirmModal.show();
                } else {
                    event.preventDefault();
                    if (!errorModal.is(":visible")) {
                        errorModal.show();
                    }
                }
            });

            // Xử lý nút "Có" trong hộp thoại xác nhận
            $("#confirmYes").on("click", function () {
                confirmModal.hide();
                $("#updatePasswordForm").off("submit").submit();
            });

            // Xử lý nút "Không" trong hộp thoại xác nhận
            $("#confirmNo").on("click", function () {
                confirmModal.hide();
            });

            // Đóng modal khi nhấn "OK"
            $("#closeModal").on("click", function () {
                errorModal.hide();
            });

            // Kiểm tra ban đầu
            checkErrors();
        });
    </script>
</body>
</html>